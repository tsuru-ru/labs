print('Перевод размера файла из байт в килобайты.')
size = int(input('Размер файла в байтах = '))// 1024
print('Задание 1 \nРазмер файла:', size , "Килобайт")

print('\nНахождение количества отвезков В в А. Нахождение незанятой части А.')
A = int(input('Введите длину А = '))
while A <= 0:
    A = int(input('Неверное значение А. Введите новое. А ='))
B = int(input('Введите длину В такую, что А > В, B = '))
while B >= A or B <= 0:
    B = int(input('Неверное значение B. Введите новое. B ='))
print('Задание 2, 3', '\nКоличесво отрезков В на А:', (A - A % B) // B, '\nДлина незанятой части:', A % B)

print('\nПерестановка чисел в двухзначном числе.')
n2 = int(input('Введите двухзначное число n2 = '))
while len(str(n2)) != 2:
    n2 = int(input('Неверное значение n2. Введите новое n2 ='))
print(f'Задание 4 \n{int(str(n2)[::-1])}')

print('\nВ трехзначном числе зачеркнули первую слева цифру и приписали ее справа')
n3 = int(input('Введите трехзначное число n3 = '))
while len(str(n3)) != 3:
    n3 = int(input('Неверное значение n3. Введите новое n3 ='))
print(f'Задание 5 \n{int(str(n3)[1:]+str(n3)[0])}')
