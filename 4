a, b = 2, 3
print('\nЗадача1', '\nПлощадь прямоугольника:', a * b, '\nПеримерт прямоугольника:', 2 * (a + b))
d = 4
print('\nЗадача2', '\nДлина окружности:', d * 3.14)
print('\nЗадача3', '\nСреднее арифметическое чисел:', (a + b) / 2)
x, y = 456, -6765
print('\nЗадача4', '\nСумма чисел:', x + y, '\nПроизведение чисел', x * y, '\nЧастное чисел:', x / y, '\nРазность чисел:', x - y)
print('\nЗадача5', '\nСумма чисел:', abs(x) + abs(y), '\nПроизведение чисел', abs(x) * abs(y), '\nЧастное чисел:', abs(x) / abs(y), '\nРазность чисел', x - y)
